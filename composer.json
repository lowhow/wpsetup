{
    "name": "how/wpsetup",
    "description": "WordPress basic setup with frequently used plugins",
    "authors": [
        {
            "name": "How",
            "email": "lowhow@gmail.com"
        }
    ],
    "repositories": [
    	{
    		"type": "composer",
    		"url": "https://wpackagist.org"
    	},
    	{
    		"type": "package",
    		"package": {
    			"name": "wordpress",
    			"type": "webroot",
    			"version": "4.7.2",
    			"dist": {
    				"type": "zip",
    				"url": "https://github.com/WordPress/WordPress/archive/4.7.2.zip"
    			},
    			"require": {
    				"fancyguy/webroot-installer": "1.0.0"
    			}
    		}
    	}
    ],
    "require":
    {
	    "wordpress": "4.7.2",
	    "fancyguy/webroot-installer": "1.0.0",
	    "wpackagist-plugin/akismet": ">=3.2",
	    "wpackagist-plugin/regenerate-thumbnails": ">=2.2.6",
	    "wpackagist-plugin/wp-pagenavi": ">=2.91",
	    "wpackagist-plugin/acf-field-date-time-picker": ">=2.1.5",
	    "wpackagist-plugin/wp-mail-smtp": ">=0.10.1",
	    "wpackagist-plugin/wordpress-importer": ">=0.6.3",
	    "wpackagist-plugin/responsive-lightbox": ">=1.6.11",
	    "wpackagist-plugin/advanced-cron-manager": ">=1.5",
	    "wpackagist-plugin/members": ">=1.1.3",
	    "wpackagist-plugin/woocommerce": ">=2.6.14",
	    "wpackagist-plugin/post-duplicator": ">=2.20"
    },
    "extra":
    {
	    "webroot-dir": "cms",
	    "webroot-package": "wordpress",
	    "installer-paths":
	    {
	    	"content/plugins/{$name}": ["type:wordpress-plugin"]
	    }

	}
}
